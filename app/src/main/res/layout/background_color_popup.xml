<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/ColorList1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fab_margin"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/circle_white"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:src="@drawable/circle_white" />

        <ImageView
            android:id="@+id/circle_lightblue"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle_lightblue"
            android:clickable="true" />

        <ImageView
            android:id="@+id/circle_blue"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle_blue"
            android:clickable="true" />

        <ImageView
            android:id="@+id/circle_purple"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle_purple"
            android:clickable="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ColorList2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ColorList1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/circle_black"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle_black"
            android:clickable="true" />

        <ImageView
            android:id="@+id/circle_yellow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle_yellow"
            android:clickable="true" />

        <ImageView
            android:id="@+id/circle_green"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle_green"
            android:clickable="true" />

        <ImageView
            android:id="@+id/circle_corn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle_corn"
            android:clickable="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ColorList3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ColorList2"
        android:layout_marginBottom="@dimen/fab_margin"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/circle_crystal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle_crystal"
            android:clickable="true" />

        <ImageView
            android:id="@+id/circle_pink"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle_pink"
            android:clickable="true" />

        <ImageView
            android:id="@+id/circle_rose"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle_rose"
            android:clickable="true" />

        <ImageView
            android:id="@+id/circle_red"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/circle_red"
            android:clickable="true" />
    </LinearLayout>

</RelativeLayout>